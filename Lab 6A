import java.util.Scanner;

public class Lab6A {
    public Lab6A() {
    }

    public static void main(String[] args) {
        int second = 0;
        Scanner scan = new Scanner(System.in);
        System.out.print("Please enter 10 numbers and this program will display the largest. \n\n");

        for(int i = 1; i < 11; ++i) {
            System.out.print("Please enter number " + i + " : ");
            int num = scan.nextInt();
            if (num > second) {
                second = num;
            }
        }

        System.out.print("\nThe largest number was " + second);
    }
}
