import java.util.Scanner;

public class Lab2A {
    public Lab2A() {
    }

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.print("Enter a name: ");
        String name = scan.next();
        System.out.print("Enter another name: ");
        String another = scan.next();
        System.out.print("Enter a verb: ");
        String verb = scan.next();
        System.out.print("Enter an adverb: ");
        String adverb = scan.next();
        System.out.println("Once upon a time, there was a person named " + name + " who had a child named " + another + ". This child would " + verb + " " + adverb + " while singing to strangers.");
    }
}
